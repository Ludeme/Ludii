// Defines a table board (without the style).
// #1 = The tracks of the players.
// @example ("TableBoard")

(define "TableBoard"
    (board 
        (merge {
            (rectangle 1 6) 
            (shift 7 0 (rectangle 1 6) )
            (shift 0 6 (rectangle 1 6) )
            (shift 7 6 (rectangle 1 6) )
        })
        #1
        use:Vertex
    )
)
