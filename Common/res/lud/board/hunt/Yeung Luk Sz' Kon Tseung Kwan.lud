(game "Yeung Luk Sz' Kon Tseung Kwan"
    (players 2)
    (equipment {
        (board
            (merge
                (rectangle 9 5)
                (shift 1 8 (scale 0.5 (wedge 3)))
            )
            use:Vertex
        )
        <Variant:pieceMoves>
    } )
    (rules
        (start {
            (place "Marker1" (union {(sites Column 1) (difference (sites Column 3) (union (sites Centre) (expand (sites Top)))) (sites Column 5)}))
            (place "Marker2" (centrePoint))
        } )

        (play (forEach Piece))

        <Variant:endRules>
    )
)

//------------------------------------------------------------------------------

(option "Variant" <Variant> args:{ <pieceMoves> <endRules> }
    {
    (item "Described"
        <
        (piece "Marker" P1 "StepToEmpty")
        (piece "Marker" P2
            (or
                ("HopCapture")
                ("StepToEmpty")
            )
        )
        >
        <
        (end  {
            (if (no Pieces P1) (result P2 Win))
            (if (no Moves P2) (result P1 Win))
        })
        >
        "P1 wins in blocking P2 to move. P2 wins in capturing by hopping all the pieces of P1."
    )
    (item "Murray"
        <
        (piece "Marker" P1
            (move Step
                (to if:(is Empty (to)))
                (then
                    (custodial
                        (from (last To))
                        (between
                            if:(is Enemy (who at:(between)))
                            (apply (remove (between)))
                        )
                        (to if:(is Friend (who at:(to))))
                    )
                )
            )
        )
        (piece "Marker" P2
            (move Step
                (to if:(is Empty (to)))
                (then
                    (intervene
                        (from (last To))
                        (to
                            if:(is Enemy (who at:(to)))
                            (apply (remove (to)))
                        )
                    )
                )
            )
        )
        >
        <
        (end  {
            (if (no Pieces P1) (result P2 Win))
            (if (no Pieces P2) (result P1 Win))
        })
        >
    "P1 and P2 win in capturing all the opponent pieces. P1 makes custodial captures and P2 makes intervention captures.")
})

//------------------------------------------------------------------------------

(rulesets {

    (ruleset "Ruleset/Yeung Luk Sz' Kon Tseung Kwan (Described)" {
        "Variant/Described"
    })*

    (ruleset "Ruleset/Murray (Suggested)" {
        "Variant/Murray"
    })

})

