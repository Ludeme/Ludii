        (show Edges Hidden)
        (show Symbol "disc" Vertex (sites Board) fillColour:(colour Grey) edgeColour:(colour Black) scale:0.5)
        (piece Scale "Marker" 0.5)
        (piece Scale "Stick" 0.5)
        (piece Colour "Die" state:1 fillColour:(colour Black))
    })
    
