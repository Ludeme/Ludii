(option "Board Size" <Board> args:{ <size> }
    {
    (item "5x5"    <(hex 5)>    "The game is played on a size 5 board")
    (item "7x7"    <(hex 7)>    "The game is played on a size 7 board")*
    (item "9x9"    <(hex 9)>    "The game is played on a size 9 board")
})

