        (board Background image:"Square.svg" fillColour:(colour 153 0 204) edgeColour:(colour 153 0 204) scale:1.3)
        (show Symbol "Disc" (sites Board) fillColour:(colour 102 0 153) edgeColour:(colour 102 0 153) scale:0.5)
