(game "Tides"  
    (players 2)  
    (equipment { 
        (board (square 5))
        (piece "Marker" Each 
            (or 
                ("HopSequenceCapture")
                ("StepToEmpty")
            )
        )
        (hand Each)
    })  
    (rules 
        (start (place "Marker" "Hand" count:12))
        
        phases:{
        (phase "Placement"
            (play
                (move 
                    (from (handSite Mover))
                    (to (difference (sites Board) (centrePoint)) if:(is Empty (to)))
                )
            )
            (nextPhase Mover (is Empty (handSite Mover)) "Move")
        )
        (phase "Move"
            (play 
                (if "SameTurn"
                    (or
                        ("HopSequenceCaptureAgain")
                        (move Pass)
                    )
                    (forEach Piece)
                )
            )
            (end (if ("NoPiece" Next) (result Next Loss)))
        )
        }
        
    )
)

