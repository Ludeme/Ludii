(define "GroupCount"
    (+
        (count Groups if:(= (who at:(to)) P1) min:<Group>)
        (count Groups if:(= (who at:(to)) P2) min:<Group>)
    )
)

//------------------------------------------------------------------------------

(game "Odd"
    (players 2)
    (equipment {
        (board (rotate 90 (hex <Board>)))
        (piece "Marker" Each)
        (hand Shared size:2)
        }
    )
    (rules
        (start {
            (place "Marker1" (handSite Shared))
            (place "Marker2" (handSite Shared 1))
        })
        (play
            (move
                (from (sites Hand Shared))
                (to (sites Empty))
                copy:True
            )
        )
        (end
            (if (is Full)
                (if
                    (is Odd
                        (+
                            (count Groups if:(= (who at:(to)) P1) min:<Group>)
                            (count Groups if:(= (who at:(to)) P2) min:<Group>)
                        )
                    )
                    (result P1 Win)
                )
                (result P2 Win)
            )
        )
    )
)

