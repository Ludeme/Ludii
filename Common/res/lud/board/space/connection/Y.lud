(game "Y"
    (players 2)
    (equipment {
        (board (hex Triangle <Board>))
        (piece "Disc")
    })
    (rules
        (play (move Add (to (sites Empty))))
        (end
            (if
                (is Connected 3 Sides)
                (result Mover <Result>)
            )
        )
    )
)

