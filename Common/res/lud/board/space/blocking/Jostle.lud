(define "Score"
    (+
        (results
            from:(sites {(from)})
            to:(sites Around #1 Orthogonal)
            (if (= (from) (to))
                0
                (if (is Friend (who at:(to)))
                    1
                    (if (is Enemy (who at:(to)))
                        -1
                        0
                    )
                )
            )
        )
    )
)

//------------------------------------------------------------------------------

(game "Jostle"
    (players 2)
    (equipment {
        <Board:board>
        (piece "Marker" Each
            (move Step Orthogonal
                (to if:(and
                        (is Empty (to))
                        (< ("Score" (from)) ("Score" (to)))
                    )
                )
            )
        )
    })
    (rules
        <Board:start>

        (play (forEach Piece))
        (end (if (no Moves Next) (result Mover Win)))
    )
)

