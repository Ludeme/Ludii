(game "Domineering"  
    (players 2)  
    (equipment { 
        (board (rectangle <Rows:num> <Columns:num>)) 
        (tile "Horz" P1 {R F} numSides:4)
        (tile "Vert" P2 {F} numSides:4)
    })  
    (rules 
        (play 
            (move 
                Add 
                (piece (mover) state:0) 
                (to (sites Empty))
            )
        )
        (end ("NoMoves" <End:result>))
    )
)

