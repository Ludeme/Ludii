(game "Agilidade"
    (players 2)
    (equipment {
        (board (skew .5 (scale 1 .5
                    (merge {
                        (wedge 2 2)
                        (shift 0 1 (rotate 180 (wedge 2 2)))
                }))
            )
        use:Vertex)
        (piece "discFlat" Each)
        (hand Each)
        }
    )
    (rules
        (start {
            (place Stack "discFlat1" (handSite P1) count:7)
            (place Stack "discFlat2" (handSite P2) count:7)
        })
        (play
            (move
                (from (handSite Mover))
                (to (sites Board))
                stack:True
            )
        )
        (end (if (is Line 3 byLevel:True) (result Mover Win)))
    )
)

