(define "IsLine"
    (not
        (all Sites
            (sites Occupied by:#1)
            if:(not (is Line 5 through:(site)))
        )
    )
)

//------------------------------------------------------------------------------

(game "Kassle"
    (players 2)
    (equipment {
        (board (square 5))
        (piece "Square" Each)
    })
    (rules
        (play 
            (or {
                (move Add (to (sites Empty)))
                ("ShiftLeft")
                ("ShiftRight")
                ("ShiftUp")
                ("ShiftDown")
            })
        )
        (end {
            (if ("IsLine" P1) 
                (result P1 Win)
            )
            
            (if ("IsLine" P2) 
                (result P2 Win)
            )
        })
    )
)

