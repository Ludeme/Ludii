(define "GetDoctrineValue"
    (if (= #1 1)
        (mapEntry  <Doctrine1:doctrine> #2)
        (if (= #1 2)
            (mapEntry  <Doctrine2:doctrine> #2)
            (if (= #1 3)
                (mapEntry  <Doctrine3:doctrine> #2)
                (if (= #1 4)
                    (mapEntry  <Doctrine4:doctrine> #2)
                    0
                )
            )
        )
    )
)

