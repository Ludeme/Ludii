(define "Move"
    (move 
        Step
        (from 
            (from)
            if:(> (state at:(from)) 1)	
        )
        Orthogonal
        (to 
            if:(#1)
        )
        (then
            (priority {
                #2
                (set State at:(last To) (- (state at:(last To)) 1))
            })
        )
    ) 
)

//------------------------------------------------------------------------------

(define "HumanMove"
    ("Move" (is In (to) "HumanMoveSpots"))
)

(define "VehicleMove"
    ("Move" 
        (or
            (is In (to) (difference (sites Empty) (union {(difference (sites "PieceHolder") (sites Mover)) (sites "Forest") (sites "ShallowWater") (sites "Mountain") (sites "DeepWater") }))) 
            (and 
                (is In (to) (union (sites Empty) (sites "Forest")))
                (= (state at:(from)) (mapEntry "Movement" (what at:(from))))
            )
        )
        (if (is In (last To) (sites "Forest")) (set State at:(last To) 1))	
    )
)

(define "VehicleMoveOLDSIMPLE"
    ("Move" 
        (is In (to) (difference (union (sites Empty) (sites Occupied by:Mover)) (union {(difference (sites "PieceHolder") (sites Mover)) (sites "ShallowWater") (sites "Mountain") (sites "DeepWater") }))) 
        (if (is In (last To) (sites "Forest")) (set State at:(last To) 1))	
    )
)

(define "AircraftMove"
    ("Move" (is In (to) "AircraftMoveSpots"))
)

(define "BoatMove"
    ("Move" (is In (to) "BoatMoveSpots"))
)

