(define "EnemyAround"
    (not
        (all Sites
            (sites Around (from) All)
            if:(not (is Enemy (who at:(site))))
        )
    )
)

(define "Leap"
    (move Leap { {F F R F} {F F L F} }
        (to if:(not (is Friend (who at:(to)))) (apply (remove (to))))
    )
)

(define "StepForward" (move Step Forward (to if:(is Empty (to)))))
(define "StepDiagonalForward"
    (move Step (directions {FR FL} of:All)
        (to if:(or
                (is Empty (to))
                (is Enemy (who at:(to)))
            )
            (apply (remove (to)))
        )
    )
)

(define "ReachedTarget" (is In (last To) (sites Mover)) )

(define "IsBehindAKnight" (= (id "Knight" Mover) (what at:("AheadSite"))))
(define "AheadSite" (ahead (from) #1 (directions Vertex from:(from) to:(to))))
(define "Shoot"
    (forEach Direction All
        (if
            (and ("IsBehindAKnight") (is Empty ("AheadSite" steps:2)))
            (if
                (is Enemy (who at:("AheadSite" steps:3)))
                (move Remove ("AheadSite" steps:3))
            )
        )
    )
)

//------------------------------------------------------------------------------

(game "Breakthrough (Leap)"
    (players {(player N) (player S)})
    (equipment {
        (board (square 8) use:Vertex)
        (piece "Knight" Each
            (or {
                (if ("EnemyAround") ("Leap"))
                ("StepForward")
                ("StepDiagonalForward")
                ("Shoot")
            })
        )
        (regions P1 (sites Top))
        (regions P2 (sites Bottom))
        (hand Each)
    })
    (rules
        (start (place "Knight" "Hand" count:18))

        phases:{
        (phase "Placement"
            (play
                (move
                    (from (handSite Mover))
                    (to (expand (sites Next) steps:2) if:(is Empty (to)))
                )
            )
            (nextPhase Mover (is Empty (handSite Mover)) "Move")
        )
        (phase "Move"
            (play (forEach Piece))
            (end (if "ReachedTarget" (result Mover Win)))
        )
        }
    )
)

//------------------------------------------------------------------------------

(metadata

    (graphics {
        (board Style Chess)
    })

)
