(game "Hashiwokakero"
    (players 1)
    (equipment  {
        (board (rect <Challenge:size>) (values Edge (range 0 2)))
        (hints { <Challenge:hints> })
    })
    (rules
        (play
            (satisfy {
                (forAll Hint (= (hint) (edge)))
                (allConnected Vertices)
                (not (isCrossing))
            })
        )
        (end (if (is Solved) (result P1 Win)))
    )
)

