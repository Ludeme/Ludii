(game "Juosan"
    (players 1)  
    (equipment {
        (board (square <Challenge:size>) (values Cell (range 1 2)))
        (hints { <Challenge:hints> })
        (regions HintRegions) 
    })
    (rules
        (play
            (satisfy {
                (if (= (what at:(last To)) 1)
                    (not (is Line 3 E))
                    (not (is Line 3 S))
                )
                (forAll 
                    Hint 
                    (or 
                        (is Count (sites Hint) of:1 (hint)) 
                        (is Count (sites Hint) of:2 (hint))
                    )
                )
            })
        )
        (end (if (is Solved) (result P1 Win)))
    )
)

