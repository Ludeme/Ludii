(game "Yut Nori"
    (players 2) 
    (equipment { 
        (board 
            (merge {
                (rectangle 1 6)
                (rectangle 6 1)
                (shift 0 5 (rectangle 1 6))
                (shift 5 0 (rectangle 6 1))
                (shift -1.04 2.5 (rotate 45 (scale 1.18 1 (rectangle 1 7))))
                (shift -1.04 2.5 (rotate -45 (scale 1.18 1 (rectangle 1 7))))
            })
            use:Vertex
        )
    }) 
    
    (rules 
        (play (forEach Piece))
        (end (if (no Moves Next) (result Mover Win)))
    )
)

