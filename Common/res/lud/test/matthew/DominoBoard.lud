(game "DominoBoard" 
    (players 2) 
    (equipment { 
        (board (square 21)) 
        (hand Each size:21)
        (dominoes)
        }
    ) 
    (rules 
        (start {
            (place "Domino03" 242 state:1) 
            (deal Dominoes 7) 
        })
        (play
            (priority 
                {
                (do (move 
                        (from (sites Occupied by:All container:(mover))) 
                        (to (sites LineOfPlay)) 
                        (then (set Hidden at:(last To) to:All))
                    ) 
                    ifAfterwards:(is PipsMatch)
                )
                (move Pass 
                    (then 
                        (if 
                            (!= (count Pieces "Bag") 0)
                            (and 
                                (take Domino)
                                (moveAgain)
                            )
                        )
                    )
                )
                }
            )
        )
        (end {
            (if ("HandEmpty" Mover) (result Mover Win)) 
            (if (all Passed) (result Mover Draw)) 
        }) 
    )
)
