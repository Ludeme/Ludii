(game "Biloba"
    (players 2)  
    (equipment { 
        (board 
            (merge {
                (shift 0 2 (rectangle 5 9))
                (shift 2 0 (rectangle 9 5))
                (shift 1 1 (square 7))
            })
       ) 
        (piece "Disc" Each)
        }
   ) 
    (rules
        (start {
            (place "Disc1" (difference 
                    (expand (sites Bottom) steps:3) 
                    (sites {"A3" "A4" "B2" "B3" "C1" "C2" "D1" "F1" "G1" "G2" "H2" "H3" "I3" "I4"})
           ))
            (place "Disc2" (difference 
                    (expand (sites Top) steps:3) 
                    (sites {"A6" "A7" "B7" "B8" "C8" "C9" "D9" "F9" "G9" "G8" "H8" "H7" "I7" "I6"})
           ))
        })
        (play
            (and
                (forEach Site (sites Occupied by:Mover)
                    (custodial 
                        (from (site)) 
                        (between 
                            (max 1) 
                            if:("IsEnemyAt" (between)) 
                            (apply (and
                                    (remove (between))
                                    (or
                                        (move Step
                                            (from (last To))
                                            (to (between))
                                       )
                                        (move Step
                                            (from (to))
                                            (to (between))
                                       )
                                   )
                           ))
                       )
                        (to if:("IsFriendAt" (to)))
                        (then (moveAgain))
                   )
               )
                (forEach piece
                    (if ("SameTurn")
                        (if (is In (last To) (sites {"E5"}))
                            (move Step
                                (from (last To))
                                (to if:(is Empty (to)))
                                (then (moveAgain))
                           )
                       )
                        (or
                            (move Step 
                                (to if:(is Empty (to))) 
                                (then (moveAgain))
                           )
                            (move Hop 
                                (between if:(not (is Empty (between))))
                                (to if:(is Empty (to))) 
                                (then (moveAgain))
                           )
                       )
                   )
               )
           )
       )
        (end (if (<= (count Pieces Mover) 2) (result Prev Win)))
   )
)
