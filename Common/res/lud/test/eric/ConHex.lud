(game "ConHex"
    (players 2)
    (equipment {
        (board
            (merge {
                (rotate 45 (square 2))
                (shift -0.155 -0.155 (rotate 45 (scale 0.5 1 (hex 1))))
                (shift 1.155 1.155 (rotate 45 (scale 0.5 1 (hex 1))))
                //			(shift 1.155 -0.155 (rotate 135 (scale 0.5 1 (hex 1))))
            })
            use:Vertex
        )
        (piece "Marker" Each)
    })
    (rules
        (play (forEach Piece))
        (end (if (no Moves Next) (result Mover Win)))
    )
)
