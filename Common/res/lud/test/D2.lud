(game "D2" 
    (players 2)
    (equipment {
        (board (square <Board:size>))
        (piece "Marker" Shared)
        (dice d:2 num:1)
    })
    (rules
        (play 
            (move Add 
                (piece (id "Marker")) 
                (to (sites Empty))
                (then
                    (if (is Full)
                        (roll) 
                   )
               )
           )
       )
        (end
            (if
                (is Full) 
                {
                (if (= (count Pips) 2) (result Mover Win))
                (if (= (count Pips) 1) (result Mover Loss))
                }
           )
       )
   )
)

