// Description of the knight move with closest non adjacent cell, not in the same phase.

(define "RegionReached" (is In (last To) (sites Mover)))

//------------------------------------------------------------------------------

(game "Knight Moves 15"
    ("TwoPlayersNorthSouth") 
    (equipment { 
        (board (square 8)) 
        (piece "Knight" Each 
            (move
                (from)
                (to 
                    (forEach
                        (sites Distance from:(from) (exact 2))
                        if:(and 
                            (!= (phase of:(from)) (phase of:(site)))
                            (or (is Empty (site)) ("IsEnemyAt" (site)))
                        )
                    )
                )
            )
        )
        (regions P1 (sites Top))
        (regions P2 (sites Bottom))
        }
    ) 
    (rules 
        (start
            { 
            (place "Knight1" (expand (sites Bottom)))
            (place "Knight2" (expand (sites Top)))
            }
        )
        
        (play (forEach Piece))
        
        (end (if "RegionReached" (result Mover Win)))
    )
)

//------------------------------------------------------------------------------

(metadata 
    
    (info
        {
        }
    )
    
    (graphics {
        (board Style Chess)
    })
    
)
