(game "Grid Test" 
    (players 2) 
    (equipment { 
        (board <Board>) 
        (piece "Marker") 
    }) 
    (rules 
        (play (move Add (to (sites Empty))))
        (end (if (is Line 8) (result Mover Win)))
    )
)

//------------------------------------------------------------------------------

(option "Board Type" <Board> args:{ <type> }
    {
    (item "Square 4" <(square 4)> "Square.")
    (item "Hex 4"  <(hex 4)>  "Hex.")
    (item "Tri 8"  <(tri 8)>  "Tri.")
    }
)

