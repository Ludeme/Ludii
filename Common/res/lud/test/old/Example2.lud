(game "Example2"
    (players 2)
    (equipment
        {
        (board <Board:type>)
        (piece "Marker" Neutral)
        }
    )
    (rules
        (start
            {
            (set Neutral Edge (sites {0..14}))
            }
        )

        (play
            (select
                (from Edge (sites Occupied by:Neutral Edge))
                (then (remove Edge (last To)))
            )
        )
        (end

            (if (isCaterpillarTree Edge Neutral) (result Mover Win))

        )
    )
)

