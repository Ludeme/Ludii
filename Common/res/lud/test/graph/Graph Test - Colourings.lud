(metadata

    (graphics {
        (board Checkered)
        (board Colour Phase0 (colour 200 130  50))
        (board Colour Phase1 (colour 225 180 100))
        (board Colour Phase2 (colour 255 230 150))

        (board StyleThickness OuterEdges 0)
        (board StyleThickness InnerEdges 0)
    })

)
