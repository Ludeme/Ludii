(game "Graph Test - Conhex A"
    (players 2)
    (equipment {
        (board
            (add
                (merge
                    (square 5)
                    (union
                        {
                        (shift 1.29 1.29 (scale 1.414 (rotate 45 (square 2))))
                        (shift 0.59 0.59 (scale 2.828 (rotate 45 (square 2))))
                        }
                    )
                )
                edges:{
                {1 5} {2 6} {2 8} {3 9}
                //{6 10} {7 11} {7 13} {8 14}
                //{10 16} {11 17} {13 17} {14 18}
                //{15 21} {16 22} {16 22} {19 23}
                }
            )
            use:Vertex
        )
        (piece "Disc" P1)
        (piece "Cross" P2)
    })
    (rules
        (play (move Add (to (sites Empty))))
        (end (if (is Line 3) (result Mover Win)))
    )
)

