(game "Graph Test - Subdivide (T3464, Checkered)"
    (players 2)
    (equipment {
        (board <Board>)
        (piece "Disc" P1)
        (piece "Cross" P2)
    })
    (rules
        (play (move Add (to (sites Empty))))
        (end (if (is Line 3) (result Mover Win)))
    )
)

