    {
    (item "1" <(celtic 1)> "") 
    (item "2" <(celtic 2)> "") 
    (item "3" <(celtic 3)> "") 
    (item "1x3" <(celtic 1 3)> "") 
    (item "3x4" <(celtic 3 4)> "") 
    (item "9x12" <(celtic 9 12)> "") 
    (item "Poly" <(celtic (poly {{0 0} {0 3} {2 3} {2 5} {5 5} {3 0}}))> "") 
    (item "Plus" 
        <(celtic 
            (poly {
                {3 2} {3 6} {0 6} {0 9} {3 9} {3 13} {6 13} {6 9} {10 9} {10 6} {6 6} {6 2} 
            })
        )> ""
    )
    (item "Cross" 
