        (classification "board/space/line")
        (credit "Cameron Browne 31/5/2020")
        (origin  "This game was played in England, from around 1850CE to 1883CE.")
        }
    )

    (graphics {
        (board StyleThickness OuterEdges 4)
        (board StyleThickness InnerEdges 4)
    })
)
