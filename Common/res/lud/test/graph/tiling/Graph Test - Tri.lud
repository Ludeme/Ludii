(game "Graph Test - Tri (Hexagon, 5, Vertex)"
    (players 2)
    (equipment {
        (board <Board>)
        (piece "Disc")
    })
    (rules
        (play (move Add (to (sites Empty))))
        (end (if (is Line 3) (result Mover Win)))
    )
)

