(game "Tic-Tac-Toe"  
    (players 2)  
    (equipment { 
        (board (square [ 3..5 | 8 | 9..12])) 
        (piece "Disc" P1) 
        (piece "Cross" P2) 
    })  
    (rules 
        (play (move Add (to (sites Empty))))
        (end (if (is Line 3) (result Mover Win)))
    )
)

