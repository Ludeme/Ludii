(game "Ciri Amber"
    (players <Version:numPlayers>)
    (equipment
        {
        (board <Board:type> use:Edge)
        (piece "Marker" Neutral)
        }
    )

    (rules
        (start
            <Board:start>
        )
        (play
            (move
                Remove
                (sites Occupied by:Neutral)
                (then
                    (addScore Mover (cost Edge at:(last To)))
                )
            )
        )
        (end
            (if (is RegularGraph Neutral)
                (byScore)
            )
        )
    )
)

