(game "Onek Rong"
    (players <Version:numPlayers>)
    (equipment {
        (board <Board:type> use:Vertex)
        (piece "Marker" Each)
    })

    (rules
        (start
            <Board:start>
        )
        (play
            (or
                (move
                    Claim
                    (to (sites Empty))
                    (then
                        (if (= 1 (size Group at:(last To)))
                            (addScore Mover (cost Vertex at:(last To)))
                        )
                    )
                )
                (move Pass)
            )
        )
        (end
            (if (or (= (count Sites in:(sites Empty)) 0) (all Passed))
                (byScore)
            )
        )
    )
)

