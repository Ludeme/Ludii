(game "Line and Cross"
    (players <Version:numPlayers>)
    (equipment
        {
        (board <Board:type> use:Edge)
        (piece "Marker" Shared)
        }
    )

    (rules
        (start
            <Board:start>
        )

        (play
            (move
                Remove (sites Occupied by:Shared)
                (then
                    (and
                        (remove Edge (last To))
                        (forEach Site
                            (sites Crossing at:(last To) All)
                            (and
                                (remove Edge (to))
                                (addScore Mover 1)
                            )
                        )
                    )
                )
            )
        )
        (end
            (if (no Moves Next)
                (byScore)
            )
        )
    )
)
