(game "Ilpion"
    (players <Version:numPlayers>)
    (equipment {
        (board <Board:type> use:Vertex)
        (piece "Disc" Each)
        (piece "Marker" Shared)
        }
    )

    (rules
        (start
            <Play:start>
        )

        (play
            <Play:move>
        )
        (end
            (if (no Moves Mover)
                (byScore)
            )
        )
    )
)
//------------------------------------------------------------------------------

