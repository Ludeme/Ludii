(define "NoPlacementAvailable"
    (= 0 (count Sites in:(forEach (sites Empty) if:(no Pieces Mover in:(sites Around (site) All)))))
)

(define "MJump"
    (move Hop
        (between
            (range 0 Infinity)
            if:(is Occupied (between))
        )
        (to
            if:(is Empty (to))
        )
    )
)
//---------------------------------------------

(game "Make Muster"
    (players 2)
    (equipment {
        (board
            (rotate (- 90 <Orient:amount>)
                (square <Board:poly> )
            )
        use:Cell )
        (piece "Disc" Each
            (move Step
                (to if:(is Empty (to)))
        ))
    } )
    (rules
        (play
            (priority
                (move
                    Add
                    (to (sites Empty)
                        if:(no Pieces Mover in:(sites Around (to) Adjacent))
                    )
                )
                (forEach Piece)
            )
        )
        (end
            (if
                (or
                    (and {
                        (= 1 (count Groups All if:(= (mover) (who at:(to)))))
                        (< 1 (count Pieces Mover))
                        // Original rules disqualified winning condition if a placement could be made in the following turn.
                        //            ("NoPlacementAvailable")
                    })
                    (< 1 (count Groups All if:(!= (mover) (who at:(to)))))
                )
                (result Mover Win)
            )
        )
    )
)

