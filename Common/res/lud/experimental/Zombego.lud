//-----------------------------------------
  
(game "Zombego"
 (players 2)
 (equipment
  {
   (board (square <Board:size>) use:Cell)
   (hand P1 size:<Pieces:count>)
   (hand P2 size:<Pieces:count>)
   (piece "Square" Each maxValue:110)
   <Pieces:map>
  }
 )
 (rules 
  (start 
   {
    (forEach Value min:0 max:(- <Pieces:count> 1)
     (place Random
      (sites Hand P1) 
      {"Square1"} count:1 
      state:0
      value:(mapEntry (value))
    ))    
    (forEach Value min:0 max:(- <Pieces:count> 1)
     (place Random
      (sites Hand P2) 
      {"Square2"} count:1 
      state:0
      value:(mapEntry (value))
    )) 
    <Rule4:hiddenStart> 
   }
  )
  (play
   (<Rule4:variantPlay>)
  )
  (end
   {
    (if
     (no Moves Next)
     (result Mover Win)
    )
    (if
     (not ("StillCanPlaceZombies" P1 1))
     (result P2 Win)
    )
    (if
     (not ("StillCanPlaceZombies" P2 1))
     (result P1 Win)
    )
   }
)))

