(game "Sitih"
    (players <Player:num>)
    (equipment {
        (board
            (concentric {40})
            use:Edge
        )
        (piece "Marker" Each)
    })
    (rules
        (play (forEach Piece))
        (end (if (no Moves Next) (result Mover Win)))
    )
)

