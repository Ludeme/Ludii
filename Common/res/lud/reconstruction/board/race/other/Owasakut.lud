(game "Owasakut"
    (players <Player:num>)
    (equipment {
        (board
            (add
                (remove
                    (concentric {33})
                    vertices:{32 11 10}
                )
                edges:{{28 29} {11 9} {8 10}}
            )
            use:Edge
        )
        (piece "Marker" Each)
    })
    (rules
        (play (forEach Piece))
        (end (if (no Moves Next) (result Mover Win)))
    )
)

