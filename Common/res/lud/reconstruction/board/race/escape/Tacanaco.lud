(game "Tacanaco"
    (players 2)
    (equipment {
        (board (rectangle 2 13)
            use:Vertex
        )
        (dice d:6 num:2)
        (piece "Disc" Each)
    })
    (rules
        (play (do (roll) next:(forEach Piece)))
        (end (if (no Moves Next) (result Mover Win)))
    )
)

