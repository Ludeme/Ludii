(game "Patolli (Aztec)" 
    (players [2 | 4])
    (equipment { 
        (board 
            (merge 
                (shift 0 9 (rectangle 2 18)) 
                (shift 8 0 (rectangle 20 2))
            )
        )
        (dice d:2 from:0 num:[4 | 5 | 10])
        (piece "Pawn" Each) // 6 pieces per players
        }
    ) 
    (rules 
        (play (do (roll) next:[#])) // doubled when all of the beans have the marked side face-up
        (end [#])
    )
)

