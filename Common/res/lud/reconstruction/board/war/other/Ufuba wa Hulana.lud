(game "Ufuba wa Hulana"
    (players 2)
    (equipment {
        (board (square 5))
        (piece "Marker" Each)
        (hand Each)
    })
    (rules
        (start (place "Marker" "Hand" count:12))
        (play (forEach Piece))
        (end (if (no Moves Next) (result Mover Win)))
    )
)

