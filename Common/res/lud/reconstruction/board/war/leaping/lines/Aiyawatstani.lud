(game "Aiyawatstani"  
    (players 2) 
    (equipment { 
        (board 
            (square 5 diagonals:Solid)
            use:Vertex
        )
        (piece "Disc" Each (move [#])) 
        }
    )  
    (rules 
        (start { 
            (place "Disc1" (forEach (sites Board) if:(< (site) (centrePoint)) ))
            (place "Disc2" (forEach (sites Board) if:(> (site) (centrePoint)) ))
        })
        (play [#])
        (end [#])
    )
)

