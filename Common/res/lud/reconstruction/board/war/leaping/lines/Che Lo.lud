(game "Che Lo"
    (players 2)
    (equipment {
        (board
            (square 3 diagonals:Solid)
            use:Vertex
        )
        (piece "Disc" Each)
        }
    )
    (rules
        (play (forEach Piece))
        (end (if (no Moves Next) (result Mover Win)))
    )
)

