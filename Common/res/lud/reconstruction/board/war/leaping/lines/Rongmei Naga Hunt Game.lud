(game "Rongmei Naga Hunt Game"
    (players 2)
    (equipment {
        (board
            (rectangle 5 3 diagonals:Alternating)
            use:Vertex
        )
        (piece "Disc" Each)
        }
    )
    (rules
        (play (forEach Piece))
        (end (if (no Moves Next) (result Mover Win)))
    )
)

