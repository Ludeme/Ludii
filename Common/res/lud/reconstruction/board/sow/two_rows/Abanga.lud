(game "Abanga"
    (players 2)

    (equipment {
        (mancalaBoard 2 9 store:None
        )
        (piece "Seed" Shared)
        }
    )
    (rules

        (play (forEach Piece))

        (end
            (if  (no Moves Next)
                (result Mover Win)
            )
        )
    )
)

