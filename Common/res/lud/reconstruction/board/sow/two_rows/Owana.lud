(game "Owana"  
    (players 2)  
    
    (equipment { 
        (mancalaBoard 2 4
            (track "Track" "1,E,N,W" loop:True)
        )
        (piece "Seed" Shared)
        }
    )  
    (rules 
        (start (set Count 4 to:(sites Track) ) )
        
        (play (forEach Piece))
        
        (end
            (if  (no Moves Next)
                (result Mover Win)
            )
        )
    )
)

