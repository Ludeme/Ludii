(game "Matara Game"
    (players 2)

    (equipment {
        (mancalaBoard 2 8
            (track "Track" "1,E,N,W" loop:True)
        )
        (piece "Seed" Shared)
        }
    )
    (rules

        (play (forEach Piece))

        (end
            (if  (no Moves Next)
                (result Mover Win)
            )
        )
    )
)

