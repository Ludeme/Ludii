(game "Kuang"
    (players 2)  
    (equipment { 
        ("AlquerqueBoard" 5 5)
        (piece "Marker" P1 (move [#]))
        (piece "Marker" P2 (move [#]))
    })  
    
    (rules 
        (start {
            (place "Marker1" (sites Centre))
            (place "Marker2" (union (intersection (union (sites Left) (sites Right)) (sites Row 2)) (expand (sites Bottom))))
        })
        (play [#])
        (end [#])
    )
)

