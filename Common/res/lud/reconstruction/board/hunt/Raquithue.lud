(game "Raquithue"
    (players 2)
    (equipment {
        (board
            (add
                (merge {
                    (rectangle 4 7)
                    (shift 1 4.5 (rectangle 4 5))
                })
                edges:{{24 30}}
            )
            use:Vertex
        )
    })

    (rules
        (play (forEach Piece))
        (end (if (no Moves Next) (result Mover Win)))
    )
)

