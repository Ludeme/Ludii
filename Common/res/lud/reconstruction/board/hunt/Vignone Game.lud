(define "PieceHasMoved"
    (if (= (state at:(last To)) 1) (set State at:(last To) 0))
)

//------------------------------------------------------------------------------

(game "Vignone Game"
    (players 2)  
    (equipment { 
        (board 
            (merge 
                {
                (rectangle 3 3 diagonals:Alternating) 
                (shift 1.5 0.5 (scale 0.5 (rotate -90 (wedge 3)))) 
                (shift -1.5 0.5 (scale 0.5 (rotate 90 (wedge 3))))
                }
            )
            use:Vertex
        )
        (piece "Marker" P1 (move [#]))
        (piece "Marker" P2 (move [#]))
    })  
    
    (rules 
        (start [#])
        (play [#])
        (end [#])
    )
)

