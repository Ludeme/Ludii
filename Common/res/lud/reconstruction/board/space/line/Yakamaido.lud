(game "Yakamaido"
    (players 2)

    (equipment
        {
        (board (concentric Square rings:3 joinCorners:True) use:Vertex)
        (hand Each)
        (piece "Marker" Each)
        }
    )
    (rules
        (play (forEach Piece))
        (end (if (no Moves Next) (result Mover Win)))
    )
)

