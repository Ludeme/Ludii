(game "Mbenga Alignment Game"  
    (players 2)  
    
    (equipment { 
        (board
            (square 3 diagonals:Solid)
            use:Vertex
        )
        (hand Each)
        (piece "Marker" Each)
    }) 
    
    (rules 
        (start (place "Marker" "Hand" count:[3..9]))
        
        (play (move (from (handSite Mover)) (to (sites Empty))) )
        
        (end (if (is Line 3) (result Mover Win)))
    )
)

