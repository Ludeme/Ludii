(game "Mbenga Alignment Game"  
    (players 2)  
    
    (equipment { 
        (board
            (square 3 diagonals:Solid)
            use:Vertex
        )
        (piece "Seed" Shared)
        }
    )  
    (rules 
        
        (play (forEach Piece))
        
        (end
            (if  (no Moves Next)
                (result Mover Win)
            )
        )
    )
)

