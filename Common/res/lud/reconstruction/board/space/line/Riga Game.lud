(game "Riga Game"
    (players 2)

    (equipment
        {
        (board
            (add
                (concentric Square rings:3)
                vertices:{{0 0}}
                edges:{{6 24} {11 24} {15 24} {16 24} {17 24} {12 24} {8 24} {7 24}}
            )
            use:Vertex
        )
        (hand Each)
        (piece "Marker" Each)
        }
    )
    (rules
        (play (forEach Piece))
        (end (if (no Moves Next) (result Mover Win)))
    )
)

