(game "Tower of Hanoi" 
    (players 1) 
    (equipment { 
        (board (rectangle 1 3)) 
        <Version:pieces>
        }
    ) 
    (rules
        (start {
            <Version:start>
        }) 
        (play 
            (move 
                (from (sites Occupied by:Mover))
                (to 
                    (sites Board)
                    if:(and 
                        (not (= (from) (to))) 
                        (or (= (what at:(to)) 0) 
                            (< 
                                (what at:(from) level:(topLevel at:(from))) 
                                (what at:(to) level:(topLevel at:(to)))
                            )
                        )
                    )
                )
            )
        )
        
        (end {
            (if 
                (is Target {<Version:order>} 2) 
                (result P1 Win) 
            )
            (if 
                (= (count Moves) <Version:limit>) 
                (result P1 Loss) 
            )
        })
    )
)

