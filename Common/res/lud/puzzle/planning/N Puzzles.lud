(game "N Puzzles"
    (players 1)
    (equipment {
        (board (square <Version:boardSize>))
        <Version:pieces>
    })

    (rules
        (start {
            (place Random {<Version:random>})
        })

        (play (forEach Piece))

        (end
            (if
                (is Target {<Version:order>} ) (result P1 Win)
            )
        )
    )
)

