(game "Kakuro"
    (players 1)
    (equipment {
        (board (rectangle <Challenge:size>) (values Cell (range 1 9)))
        (hints { <Challenge:hints> })
        (regions HintRegions)
    })
    (rules
        (play
            (satisfy {
                (is Sum (hint))
                (all Different)
            })
        )
        (end (if (is Solved) (result P1 Win)))
    )
)

