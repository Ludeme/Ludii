(game "Latin Square"
    (players 1)
    (equipment {
        (board (square <Size>) (values Cell (range 1 <Size>)))
        (regions {Columns Rows})
    })
    (rules
        (play (satisfy (all Different)))
        (end (if (is Solved) (result P1 Win)))
    )
)

