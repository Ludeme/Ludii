(game "Killer Sudoku"
    (players 1)
    (equipment {
        (board (square 9) (values Cell (range 1 9)))
        <Challenge>
        (regions {Columns Rows SubGrids})
        (regions "RegionHint" HintRegions)
    } )
    (rules
        (play
            (satisfy {
                (is Sum "RegionHint" (hint))
                (all Different)
            })
        )
        (end (if (is Solved) (result P1 Win)))
    )
)

