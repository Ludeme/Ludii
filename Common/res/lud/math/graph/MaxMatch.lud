(game "MaxMatch"
    (players 2)
    (equipment {
        (board <Board:type> use:Vertex)
    })

    (rules
        (play
            (or
                (move
                    Add
                    (to
                        Edge
                        (sites Empty Edge)
                    )
                    (then
                        (if
                            (is Path Edge Mover length:(exact 1))
                            (addScore Mover 1)
                        )
                    )
                )
                (move Pass)
            )
        )

        (end
            (if (all Passed)
                (byScore)
            )
        )
    )
)

