(game "Two-Colour"
    (players 2)
    (equipment {
        (board <Board:type> use:Vertex)
        (piece "Marker" Each)
    })
    (rules
        (play
            (or
                (move
                    Add
                    (to (sites Empty))
                    (then
                        (if (= 1 (size Group at:(last To)))
                            (addScore Mover 1)
                        )
                    )
                )
                (move Pass)
            )
        )
        (end
            (if (all Passed)
                (byScore)
            )
        )
    )
)

