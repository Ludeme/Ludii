(game "Nim"  
    (players 2)  
    (equipment { 
        (board (rectangle 1 <Size:board>)) 
        (piece "Marker" Neutral)
        }
    )  
    (rules
        (start     		
            <Size:piles>
        ) 
        
        (play 
            (if "SameTurn"
                (or
                    (move 
                        Select 
                        (from (last To))
                        (then 
                            (if (= (count at:(last To)) 1)
                                (remove (last To))
                                (and (set Count at:(last To) (- (count at:(last To)) 1)) (moveAgain)) 
                            )
                        ) 
                    )
                    (move Pass)
                )
                (move
                    Select
                    (from (sites Occupied by:Neutral))
                    (then 
                        (if (= (count at:(last To)) 1)
                            (remove (last To))
                            (and (set Count at:(last To) (- (count at:(last To)) 1)) (moveAgain)) 
                        )
                    ) 
                )
            )
        ) 
        (end (if (no Moves Next) (result <Result> Win)))
    )
)

